@using IdentityServer4.Extensions

@{
    Layout = "_LayoutBoot";
}



@section Header
    {

    <!--Mask-->
    <div id="intro" class="view">

        <div class="mask rgba-black-strong">

            <div class="container-fluid d-flex align-items-center justify-content-center h-100">

                <div class="row d-flex justify-content-center text-center">

                    <div class="col-md-10">

                        <!-- Heading -->
                        <h2 class="display-4 font-weight-bold white-text pt-5 mb-2">PTC Online Identity Server</h2>

                        <!-- Divider -->
                        <hr class="hr-light">

                        <!-- Description -->
                        <h4 class="white-text my-4">A Single Sign-On solution (SSO) for all PTCOnline applications.</h4>
                        @if (User.IsAuthenticated() && User.IsInRole("Admin"))
                        {
                            <a asp-action="Index" asp-controller="Admin" class="btn btn-outline-white">Admin Portal </a>
                        }
                    </div>

                </div>

            </div>

        </div>

    </div>
    <!--Mask-->
}

<!--Main Navigation-->
